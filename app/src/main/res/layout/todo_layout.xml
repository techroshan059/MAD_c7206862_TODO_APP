<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/round_corner_edittext"
   >






    <RelativeLayout


        android:id="@+id/circlePanel"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/circle_shape"
        android:gravity="center">


        <LinearLayout
            android:id="@+id/datetimelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView

                android:id="@+id/datetime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="14sp"
                tools:text="08" />


            <TextView

                android:id="@+id/datetime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="8sp"

                tools:text="Dec" />
        </LinearLayout>


        <TextView

            android:id="@+id/datetime3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/datetimelayout"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="16sp"
            tools:text="2018" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/status_of_list"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/circle_shape_warning"

        ></RelativeLayout>
       <TextView
               android:id="@+id/title_view"
               style="@style/Base.TextAppearance.AppCompat.Headline"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               android:textColor="@color/colorPrimaryDark"
               android:textSize="18sp"
               android:textStyle="bold"
           android:layout_toEndOf="@+id/circlePanel"
               tools:text="kajshdkjahsdkjahsdkjas" />

           <TextView
               android:id="@+id/content_view"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="14sp"
               android:layout_toEndOf="@+id/circlePanel"
               android:layout_below="@id/title_view"
               tools:text="Content_view" />

          <LinearLayout
              android:gravity="center"
              android:layout_toEndOf="@id/circlePanel"
              android:layout_width="match_parent"
              android:layout_below="@id/content_view"
              android:orientation="horizontal"
              android:layout_height="wrap_content">

              <TextView
                  android:id="@+id/date_view"
                  android:layout_width="120dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:textSize="14sp"

                  tools:text="11-11-1111, 01:48" />


              <TextView
                  android:id="@+id/dueDate_view"
                  android:layout_width="60dp"
                  android:layout_height="19dp"
                  android:layout_marginRight="5dp"


                  android:background="@drawable/round_corner_box_dd"

                  android:gravity="center"
                  android:textColor="#fff"
                  android:textSize="12dp"
                  android:layout_weight="1"
                  tools:text="Due Date" />

              <TextView
                  android:id="@+id/priority_view"
                  android:layout_width="60dp"
                  android:layout_height="19dp"

                  android:layout_weight="1"


                  android:background="@drawable/round_corner_box_p"

                  android:gravity="center"
                  android:textColor="#fff"
                  android:textSize="12dp"
                  tools:text="priority" />


          </LinearLayout>




</RelativeLayout>